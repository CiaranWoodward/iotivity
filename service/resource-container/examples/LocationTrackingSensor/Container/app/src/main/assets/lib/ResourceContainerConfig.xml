<container>
    <bundle>
        <id>.bundle.android.tracking</id>
        <path>org.iotivity.service.sample.locationtrackingapp.apk</path>
        <activator>org.iotivity.service.sample.locationtrackingapp.Activator</activator>
        <version>1.0.0</version>
        <resources>
            <resourceInfo>
                <name>androidAccelerationSensor</name>
                <resourceType>oic.r.acceleration</resourceType>
                <resourceUri>/android/accel/1</resourceUri>
            </resourceInfo>
            <resourceInfo>
                <name>androidMagneticSensor</name>
                <resourceType>oic.r.magnetic</resourceType>
                <resourceUri>/android/magnetic/1</resourceUri>
            </resourceInfo>
            <resourceInfo>
                <name>androidWifiPower</name>
                <resourceType>oic.r.wifi</resourceType>
                <resourceUri>/android/wifi/1</resourceUri>
            </resourceInfo>
            <resourceInfo>
                <name>androidLinearAcceleration</name>
                <resourceType>oic.r.linearacceleration</resourceType>
                <resourceUri>/android/linearaccel/1</resourceUri>
            </resourceInfo>
            <resourceInfo>
                <name>TrackingSensor1</name>
                <resourceType>oic.r.trackingsensor</resourceType>
                <resourceUri>/android/trackingsensor/1</resourceUri>
                <outputs>
                    <output>
                        <name>loc_x</name>
                        <type>double</type>
                    </output>
                    <output>
                        <name>loc_y</name>
                        <type>double</type>
                    </output>
                </outputs>
                <inputs>
                    <input>
                        <name>androidAccelerationSensor</name>
                        <type>double</type>
                        <resourceType>oic.r.acceleration</resourceType>
                    </input>
                    <input>
                        <name>androidMagneticSensor</name>
                        <type>double</type>
                        <resourceType>oic.r.magnetic</resourceType>
                    </input>
                    <input>
                        <name>androidWifi</name>
                        <type>double</type>
                        <resourceType>oic.r.wifi</resourceType>
                    </input>
                    <input>
                        <name>androidLinearAcceleration</name>
                        <type>double</type>
                        <resourceType>oic.r.linearacceleration</resourceType>
                    </input>
                </inputs>
            </resourceInfo>
        </resources>
    </bundle>
</container>
