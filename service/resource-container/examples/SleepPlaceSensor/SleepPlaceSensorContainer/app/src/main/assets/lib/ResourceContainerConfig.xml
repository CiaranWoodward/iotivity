<container>
    <bundle>
        <id>oic.bundle.android.sleepplacesensor</id>
        <path>org.iotivity.service.sample.sleepplacesensor.apk</path>
        <activator>org.iotivity.service.sample.sleepplacesensor.SleepPlaceSensorActivator</activator>
        <version>1.0.0</version>
        <resources>
            <resourceInfo>
                <name>LightSensor</name>
                <resourceType>oic.r.lightsensor</resourceType>
                <resourceUri>/android/lightsensor/1</resourceUri>
            </resourceInfo>
            <resourceInfo>
                <name>androidEMCResource</name>
                <resourceType>oic.r.emc</resourceType>
                <resourceUri>/android/emc/1</resourceUri>
            </resourceInfo>
            <resourceInfo>
                <name>EMCSensor</name>
                <resourceType>oic.r.emcsensor</resourceType>
                <resourceUri>/android/emcsensor/1</resourceUri>
            </resourceInfo>
            <resourceInfo>
                <name>SleepPlaceSensor</name>
                <resourceType>oic.r.sleepplacesensor</resourceType>
                <resourceUri>/android/sleepplacesensor/1</resourceUri>
                <outputs>
                    <output>
                        <name>humidity</name>
                        <type>double</type>
                    </output>
                    <output>
                        <name>temperature</name>
                        <type>double</type>
                    </output>
                    <output>
                        <name>light-intensity</name>
                        <type>double</type>
                    </output>
                    <output>
                        <name>emc-intensity</name>
                        <type>double</type>
                    </output>
                    <!--<output>
                        <name>sound</name>
                        <type>double</type>
                    </output>-->
                    <output>
                        <name>sleepplaceIndex</name>
                        <type>int</type>
                    </output>
                </outputs>
                <inputs>
                    <input>
                        <name>humidity</name>
                        <type>double</type>
                        <resourceType>oic.r.humidity</resourceType>
                    </input>
                    <input>
                        <name>temperature</name>
                        <type>double</type>
                        <resourceType>oic.r.temperature</resourceType>
                    </input>
                    <input>
                        <name>light-intensity</name>
                        <type>double</type>
                        <resourceType>oic.r.humidity</resourceType>
                    </input>
                    <input>
                        <name>emc-intensity</name>
                        <type>double</type>
                        <resourceType>oic.r.temperature</resourceType>
                    </input>
                    <!--<input>
                        <name>sound-dB</name>
                        <type>double</type>
                        <resourceType>oic.r.humidity</resourceType>
                    </input>-->
                </inputs>
            </resourceInfo>
        </resources>
    </bundle>
</container>